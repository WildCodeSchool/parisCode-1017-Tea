{% extends 'admin/adminLayout.html.twig' %}

{% block body %}

    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <i class="fa fa-fw fa-dashboard"></i>
                    <a href="index.php?section=admin&page=home" class="text-dark">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">
                    <a class="text-dark">Forms</a>
                </li>
                <li class="breadcrumb-item active">Users</li>
            </ol>

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Users</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row mb-3">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            {% if users is not defined %}
                                <p><i>Create new user</i></p>
                            {% else %}
                                <p><i>Modify user</i></p>
                            {% endif %}
                        </div>
                        <div class="panel-body">
                            <form role="form" action="index.php?section=admin&page=tables&table=users&action=add" type="post">
                                <div class="row">
                                    <div class="col-lg-6">
                                        {% if users is defined %}
                                        <div class="form-group">
                                            <label>Idusers</label>
                                            <p class="form-control-static">{{ users.idusers }}</p>
                                        </div>
                                        {% endif %}
                                        <div class="form-group">
                                            <label>Firstname</label>
                                            <input class="form-control" placeholder="Enter firstname" name="firstname" value="{{ users.firstname }}">
                                        </div>
                                        <div class="form-group">
                                            <label>Lastname</label>
                                            <input class="form-control" placeholder="Enter lastname" name="lastname" value="{{ users.lastname }}">
                                        </div>
                                        <div class="form-group">
                                            <label>Address</label>
                                            <input class="form-control" placeholder="Enter address" name="address" value="{{ users.address }}">
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input class="form-control" placeholder="Enter email" name="email" value="{{ users.email }}">
                                        </div>
                                        <div class="form-group">
                                            <label>Phone</label>
                                            <input class="form-control" placeholder="Enter phone" name="phone" value="{{ users.phone }}">
                                        </div>
                                    </div>
                                    <!-- /.col-lg-6 (nested) -->
                                    <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Login</label>
                                                <input class="form-control" placeholder="Enter login" name="login" value="{{ users.login }}">
                                            </div>
                                            <div class="form-group">
                                                <label>Password</label>
                                                <input class="form-control" placeholder="Enter password" name="password" value="{{ users.password }}">
                                            </div>
                                            <div class="form-group">
                                                <label>Role</label>
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio" name="optionsRadios" id="optionsRadios1" name="roles_idroles" value="{{ users.roles_idroles }}" checked>User
                                                    </label>
                                                </div>
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio" name="optionsRadios" id="optionsRadios2" name="roles_idroles" value="{{ users.roles_idroles }}">Admin
                                                    </label>
                                                </div>
                                            </div>
                                    </div>
                                    <!-- /.col-lg-6 (nested) -->
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                                <!-- /.row (nested) -->
                            </form>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    </div>
    <!-- /#wrapper -->

{% endblock body %}