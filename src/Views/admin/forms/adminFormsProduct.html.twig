{% extends 'admin/adminLayout.html.twig' %}

{% block body %}

    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <i class="fa fa-fw fa-dashboard"></i>
                    <a href="index.php?section=admin&page=home" class="text-dark">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">
                    <a class="text-dark">Forms</a>
                </li>
                <li class="breadcrumb-item active">Products</li>
            </ol>

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Products</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row mb-3">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            {% if errors is defined %}
                                <div class="alert alert-danger">
                                    <strong>{{ errors }}</strong>
                                </div>
                            {% endif %}
                        </div>
                        <div class="panel-body">
                            {% if products.idproducts is defined %}
                            <form role="form" action="index.php?section=admin&page=tables&table=products&action=update&idproducts={{ products.idproducts }}" method="post">
                            {% else %}
                            <form role="form" action="index.php?section=admin&page=tables&table=products&action=add" method="post">
                             {% endif %}
                                <div class="row">

                                    <div class="col-lg-6">

                                        <div class="form-group">
                                            <label for="disabledSelect">Idproducts</label>
                                            <input class="form-control" id="disabledInput" type="text" placeholder="" value="{{ products.idproducts }}" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label>Name</label>
                                            <input class="form-control" placeholder="Enter name of the product" name="name" value="{{ products.name }}">
                                        </div>
                                        <div class="form-group">
                                            <label>Description</label>
                                            <input class="form-control" type="text" placeholder="Enter value here" name="description" value="{{ products.description }}">
                                        </div>
                                        <div class="form-group">
                                            <label>Quantity</label>
                                            <input class="form-control" placeholder="Enter value here" name="quantity" value="{{ products.quantity }}">
                                        </div>
                                        <div class="form-group">
                                            <label>Price</label>
                                            <input class="form-control" placeholder="Price" name="price" value="{{ products.price }}">
                                        </div>
                                        {#<div class="form-group">#}
                                            {#<label for="images">Images</label>#}
                                            {#<input type="file" name="images[]" multiple="multiple" id="images" value="{{ products.images_idimages }}">#}
                                        {#</div>#}
                                        <div class="form-group">
                                            <label>Categorie</label>
                                            <input class="form-control" placeholder="Categorie" name="categories_idcategories" value="{{ products.categories_idcategories }}">
                                        </div>
                                        <div class="form-group">
                                            <label>Images</label>
                                            <input class="form-control" placeholder="Images" name="images_idimages" value="{{ products.images_idimages }}">
                                        </div>

                                    </div>
                                 </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock body %}