{% extends 'layout.html.twig' %}

{% block body %}

    <header class="business-header-contact">
        <div class="container">
        </div>
    </header>

    <div class="container">
        <form action="index.php?section=contact" method="post" class="form-horizontal">
            <script type="text/javascript" src="https://www.google.com/recaptcha/api.js?hl=fr"></script>
            <fieldset>
                <!-- Form Name -->
                <div align="center" class="title-contact">
                    <h3>Nous contacter</h3>
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="firstname">Prénom *</label>
                    <div class="col-lg-12">
                        <input id="firstname" name="firstname" type="text" placeholder="Prénom" class="form-control input-md" value="{{ post.firstname }}">
                        {% if errors.firstname is defined %}
                            <p class="errors">{{ errors.firstname }}</p>
                        {% endif %}
                    </div>
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="lastname">Nom</label>
                    <div class="col-lg-12">
                        <input id="lastname" name="lastname" placeholder="Nom" type="text" class="form-control input-md" value="{{ post.lastname }}">
                    </div>
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="phone">Téléphone</label>
                    <div class="col-lg-12">
                        <input id="phone" name="phone" type="tel" minlength=10 maxlength=10 placeholder="Téléphone" class="form-control input-md" value="{{ post.phone }}">
                    </div>
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="email">Email *</label>
                    <div class="col-lg-12">
                        <input id="email" name="email" placeholder="Email" type="email" class="form-control input-md" value="{{ post.email }}">
                        {% if errors.email is defined %}
                            <p class="errors">{{ errors.email }}</p>
                        {% endif %}
                    </div>
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="message">Message *</label>
                    <div class="col-lg-12">
                        <textarea class="form-control input-md" name="message" placeholder="Message" rows=6 cols=420 >{{ post.message }}</textarea>
                        {% if errors.message is defined %}
                            <p class="errors">{{ errors.message }}</p>
                        {% endif %}
                    </div>
                </div>
                <!-- Captcha -->
                <div class="col-lg-12" align="center">

                    <input class="hidden" type="text" name="secret" value="6LeIIzsUAAAAAPaLaQiBs9FnEgSOAa9ji7ihNhrL">
                    <input class="hidden" type="text" name="response" value="g-recaptcha-response">
                    <input class="hidden" type="text" name="remoteip" value="{{ remoteip }}">
                    <div class="g-recaptcha" data-sitekey="6LeIIzsUAAAAAOUQ2F0nz-vWIJSGl7SwSSGglgRa"></div>
                </div>
                <!-- Button -->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="envoyer"></label>
                    <div class="col-lg-12" align="center">
                        <button id="submit" name="submit" class="btn btn-envoi">Envoyer</button>
                    </div>
                </div>
                <p>* Champs requis</p>
            </fieldset>
        </form>

        <section class="infos">
            <div class="col-lg-12 titlecontact" align="center">
                <h2>Où nous trouver</h2>
            </div>
            <div class="row-fluid">
                <div class="col-lg-8 hidden-xs googlemap" align="center">
                    <iframe class="map"src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.620984652678!2d2.40433451555134!3d48.865437408164695!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66d9b51bb7ce5%3A0x26c2589249081fc0!2s22+Rue+Emile+Pierre+Casel%2C+75020+Paris!5e0!3m2!1sfr!2sfr!4v1511439693698" width="400" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
                <div class="col-lg-4 address">
                    <h3>Volup'T</h3>
                    <p>
                        22 rue Pierre Emile Casel<br>
                        75020 Paris<br>
                        Tel : 01 23 45 67 89<br>
                        Ouvert du Lundi au Samedi de 10h à 19h.
                    </p>
                    <p class="contactLien"><a class="btn btn-lg btncontact" href="index.php?section=contact">CONTACT</a></p>
                </div>
            </div>
        </section>
    </div>

{% endblock %}