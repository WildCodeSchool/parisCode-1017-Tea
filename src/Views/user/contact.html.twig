{% extends 'layout.html.twig' %}

{% block body %}

    <div class="container">
        <form action="index.php?section=contact" method="post" class="form-horizontal">
            <fieldset>

                <!-- Form Name -->
                <div align="center" class="title-contact">
                    <h3>Nous contacter</h3>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="fn">*Nom :</label>
                    <div class="col-lg-12">
                        <input id="fn" name="fn" type="text" placeholder="Nom" class="form-control input-md" value="{% if post.fn is defined %}{{ post.fn }}{% endif %}">

                        {% if errors.fn is defined %}
                            <p class="errors">{{ errors.fn }}</p>
                        {% endif %}
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="ln">*Prénom :</label>
                    <div class="col-lg-12">
                        <input id="ln" name="ln" type="text" placeholder="Prenom" class="form-control input-md" value="{% if post.ln is defined %}{{ post.ln }}{% endif %}">
                        {% if errors.ln is defined %}
                            <p class="errors">{{ errors.ln }}</p>
                        {% endif %}
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="phone">*Téléphone :</label>
                    <div class="col-lg-12">
                        <input id="phone" name="phone" type="text" placeholder="Telephone" class="form-control input-md" value="{% if post.phone is defined %}{{ phone.fn }}{% endif %}">
                        {% if errors.phone is defined %}
                            <p class="errors">{{ errors.phone }}</p>
                        {% endif %}
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="email">*Email :</label>
                    <div class="col-lg-12">
                        <input id="email" name="email" type="text" placeholder="Email" class="form-control input-md" value="{% if post.email is defined %}{{ post.email }}{% endif %}">
                        {% if errors.email is defined %}
                            <p class="errors">{{ errors.email }}</p>
                        {% endif %}
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="message">Message :</label>
                    <div class="col-lg-12">
                        <textarea name="message" rows=10 cols=420> {% if post.message is defined %}{{ post.message }}{% endif %} </textarea>
                        {% if errors.message is defined %}
                            <p class="errors">{{ errors.message }}</p>
                        {% endif %}
                    </div>
                </div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-lg-12 control-label" for="envoyer"></label>
                    <div class="col-lg-12">
                        <button id="submit" type="submit" name="submit" class="btn btn-primary">ENVOYER</button>
                    </div>
                </div>

            </fieldset>
        </form>

    </div>


{% endblock %}






